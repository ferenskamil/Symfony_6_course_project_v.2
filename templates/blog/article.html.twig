{% extends "base.html.twig" %}

{% block title %}
{{ article.title }}
{% endblock %}

{% block body %}
<nav>
    <ul>
        <a href="/">
            <li>Main Page</li>
        </a>
    </ul>
</nav>
{% if article.images %}
<img src="{{ article.images | first.path }}" alt="{{ article.images | first.alt }}" style="height: 400px">
{% endif %}
<h1>{{ article.title}}</h1>
<div>
    {{ article.content }}
</div>
{% for img in article.images[1:] %}
{% if article.images %}
<img src="{{ img.path }}" alt="{{ img.alt }}" style="height: 100px">
{% endif %}
{% endfor %}
{% endblock %}