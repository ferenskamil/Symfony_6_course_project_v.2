<a href="{{ article.link }}" target="_blank">
    <h2>{{ article.title }}</h2>
    <p style="font-size: 0.8rem">
        {{ article.addedAt | date("m/d/Y") }}
    </p>
    <p>{{ article.content }}</p>
    {% if article.images %}
    <img src="{{ article.images | first.path }}" alt="{{ article.images | first.alt }}" style="height: 100px">
    {% endif %}
</a>