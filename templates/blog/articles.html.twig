{% extends "base.html.twig" %}

{% block title %}
Artykuły
{% endblock %}

{% block body %}
<nav>
    <ul>
        <a href="/">
            <li>Main Page</li>
        </a>
    </ul>
</nav>
<h1>Witam Cię w moich artykułach!</h1>
<div>
    {% for article in articles %}
    <a href="{{ article.link }}" target="_blank">
        <h2>{{ article.title }}</h2>
        <p style="font-size: 0.8rem">
            {{ article.addedAt | date("m/d/Y") }}
        </p>
        <p>{{ article.content }}</p>
    </a>
    {% endfor %}
</div>
{% endblock%}